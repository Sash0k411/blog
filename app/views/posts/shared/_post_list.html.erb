<div class="row">
  <div class="col-md-9">
    <div class="container content-container">
      <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center text-center">
        <% @posts.each do |post| %>
          <div class="col mx-auto">
            <div class="card h-100">
              <% if post.image.attached? %>
                <%= image_tag(post.image, class: "card-img-top content-image") %>
              <% else %>
                <div class="placeholder-image"></div>
              <% end %>
              <div class="card-body">
                <h5 class="card-title content-title"><%= link_to post.title, post_path(post) %></h5>
                <p class="card-text"><%= post.description %></p>
                <div class="d-grid gap-2">
                  <% if current_user == post.user %>
                    <%= link_to "Edit", edit_post_path(post), class: "btn btn-custom btn-sm rounded-pill fw-bold shadow-sm" %>
                    <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm rounded-pill fw-bold shadow-sm" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>